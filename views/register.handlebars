{{>navbar show=true home=true}}

<main>
    {{#if errMessage}}
        <h3>{{errMessage}}</h3>
        {{>errorMessage}}

    {{else}}
        <form class="register-form" method="POST">
                <div class="logo-container">
                    <!-- <img src="/thedude2.jpg" alt="The Dude logo"> -->

                    <img src="thedude.jpg" alt="The Dude logo">
                </div>
                <div class="register-form_content">
                    <div class="register-form_header">Create your account:</div>
                    <input class="register-form_input" type="text" name="first_name" placeholder="First Name" required>
                    <input class="register-form_input" type="text" name="last_name" placeholder="Last Name" required>
                    <input class="register-form_input" type="text" name="email" placeholder="E-mail Address" required minlength="6" maxlength="50">
                    <input class="register-form_input" type="password" name="password" placeholder="Password" required minlength="5" maxlength="15" pattern="[a-zA-Z0-9]+">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <button class="register-form_btn" type="submit">Abide</button>
                </div>

                <div class="register-form_footer">
                    <a class="log-in_link" href="/login">Already a nihilist? Log in!</a>
                </div>

        </form>
    {{/if}}
</main>
