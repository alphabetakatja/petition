{{>navbar show=true}}

<main>
    <h3 class="login-error">{{errMessage}}</h3>

    <form class="login-form" method="POST">
        <div class="logo-container">
            <img src="/walter.jpg" alt="The Dude logo">
        </div>

        <div class="login-form_content">
            <div class="login-form_header">Login to your account:</div>
            <input class="login-form_input" type="text" name="email" placeholder="E-mail Address" required>
            <input class="login-form_input" type="password" name="password" placeholder="Password" required>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button class="login-form_btn" type="submit">Abide</button>
        </div>

        <div class="login-form_footer">
            <a class="sign-up_link" href="/register" target="_blank">Not a nihilist yet? What'ya waiting for!</a>
        </div>
    </form>

</main>
